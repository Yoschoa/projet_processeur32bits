{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch with args",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/main", // Adjust path
            "args": ["./hexCode.bin"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build", // Optional: build before debugging
            "miDebuggerPath": "/usr/bin/gdb" // Path to gdb
        }
    ]
}